{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "types": [
      "vite/client",
      "vite-plugin-pwa/client.d.ts"
    ],
    "outDir": "lib",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
    "test-e2e",
    "playwright.config.ts",
    "vite.config.ts",
  ],
}